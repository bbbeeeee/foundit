extends layout

block content
	div.originalDescription
		h2= found.title
		p= found.description
	if ownsThis
		div.respond
			h2 I think this is mine:
			form(action="/this-is-mine", method="POST")
				input(type="text", name="description")
				input(type="text", name="email")
				button(type="submit") Submit
	else
		div.responses
			for response in responses
				p= responses.description
				form(action="/send-that-shit", method="POST")
					input(type="hidden", value="#{response.description}")
					input(type="hidden", value="#{response.email}")
					button(type="submit") This one's it!

